<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <CheckBoxPreference
        android:defaultValue="false"
        android:key="showLargeDisplay"
        android:summaryOff="Normal Size"
        android:summaryOn="Large Size "
        android:title="Show Large Display " />
    <CheckBoxPreference
        android:defaultValue="true"
        android:key="showShortcutCenter"
        android:summary="show/hide notification bar"
        android:summaryOff="Notification bar is off"
        android:summaryOn="Notification bar is on"
        android:title="Show Shortcut Notifcation Bar " />
    <ListPreference
        android:defaultValue="common"
        android:entries="@array/saveSearchTitles"
        android:entryValues="@array/saveSearchValues"
        android:key="saveSearchPolicy"
        android:title="Save Search Policy" />
    <ListPreference
        android:defaultValue="ctx"
        android:entries="@array/languages"
        android:entryValues="@array/langCodes"
        android:key="interfaceLang"
        android:title="Interface Language"
        android:summary="your choice is %s"/>
    <ListPreference
        android:defaultValue="ctx"
        android:entries="@array/languages"
        android:entryValues="@array/langCodes"
        android:key="contentLang"
        android:title="Contents Language"
        android:summary="your choice is %s"/>
</PreferenceScreen>